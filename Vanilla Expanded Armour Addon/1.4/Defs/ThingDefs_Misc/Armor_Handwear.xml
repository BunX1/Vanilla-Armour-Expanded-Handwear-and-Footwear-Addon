<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- ##### Spacer ##### -->
    <!-- +++++ Marine Gloves +++++ -->
    <ThingDef ParentName="ApparelMakeableBase">
		<defName>VAE_Handwear_MarineGloves</defName>
		<label>marine gloves</label>
		<description>A pair of marine gloves with enhanced grip assistance and set of embedded recoil stabilisers.</description>
		<graphicData>
			<texPath>Things/Handwear/PowerArmorGloves</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Spacer</techLevel>
		<tradeability>Sellable</tradeability>
        <generateCommonality>0.1</generateCommonality>
		<costList>
			<Plasteel>20</Plasteel>
			<ComponentSpacer>1</ComponentSpacer>
		</costList>
		<statBases>
			<MaxHitPoints>160</MaxHitPoints>
			<WorkToMake>16000</WorkToMake>
			<Mass>2</Mass>
			<Flammability>0.4</Flammability>
			<ArmorRating_Sharp>0.74</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.3</ArmorRating_Blunt>
			<ArmorRating_Heat>0.7</ArmorRating_Heat>
			<Insulation_Cold>2</Insulation_Cold>
 			<Insulation_Heat>4</Insulation_Heat>
            <EquipDelay>2.5</EquipDelay>
		</statBases>	
		<equippedStatOffsets>
			<ShootingAccuracyPawn>0.5</ShootingAccuracyPawn>
		</equippedStatOffsets>
		<thingCategories Inherit="False">
			<li>VAE_BootsAndGloves</li>
		</thingCategories>
		<apparel>
			<countsAsClothingForNudity>false</countsAsClothingForNudity>
			<bodyPartGroups>
				<li>Hands</li>
			</bodyPartGroups>
			<layers>
				<li>Middle</li>
			</layers>
			<tags>
				<li>SpacerMilitary</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
            </defaultOutfitTags>
		</apparel>
		<recipeMaker>
			<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
			<researchPrerequisite>PoweredArmor</researchPrerequisite>
			<skillRequirements>
				<Crafting>8</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="False">
				<li>FabricationBench</li>
			</recipeUsers>
		</recipeMaker>
		<colorGenerator Class="ColorGenerator_Options"> <!-- Vanilla Power Armor -->
			<options>
				<li>
					<weight>10</weight>
					<only>(0.9,0.9,0.9)</only>
				</li>
				<li>
					<weight>10</weight>
					<only>(0.33,0.33,0.33)</only>
				</li>
				<li>
					<weight>10</weight>
					<only>(0.65,0.65,0.65)</only>
				</li>
				<li>
					<weight>6</weight>
					<min>(0.3,0.3,0.3)</min>
					<max>(0.5,0.5,0.5)</max>
				</li>
			</options>
		</colorGenerator>
    </ThingDef>

	<!-- Trooper Gloves -->
	<ThingDef ParentName="ApparelMakeableBase">
		<defName>Handwear_TrooperGloves</defName>
		<label>Trooper gloves</label>
		<description>A pair of trooper gloves used as coverage to low caliber arms fire, and active insulation.
		
		The weight and wield absorbs part of recoil, leading to higher overall accuracy</description>
		<graphicData>
			<texPath>Things/Handwear/TrooperGloves</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Spacer</techLevel>
		<tradeability>Sellable</tradeability>
		<generateCommonality>0.1</generateCommonality>
		<costList>
			<Plasteel>15</Plasteel>
			<Steel>30</Steel>
			<ComponentIndustrial>5</ComponentIndustrial>
			<Cloth>20</Cloth>
		</costList>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<WorkToMake>11000</WorkToMake>
			<Mass>1.6</Mass>
			<Flammability>0.5</Flammability>
			<ArmorRating_Sharp>0.59</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.27</ArmorRating_Blunt>
			<ArmorRating_Heat>0.7</ArmorRating_Heat>
			<Insulation_Cold>3</Insulation_Cold>
			<Insulation_Heat>5</Insulation_Heat>
			<EquipDelay>1.5</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<ShootingAccuracyPawn>0.2</ShootingAccuracyPawn>
		</equippedStatOffsets>
		<thingCategories Inherit="False">
			<li>VAE_BootsAndGloves</li>
		</thingCategories>
		<apparel>
			<countsAsClothingForNudity>false</countsAsClothingForNudity>
			<bodyPartGroups>
				<li>Hands</li>
			</bodyPartGroups>
			<layers>
				<li>Middle</li>
			</layers>
			<tags>
				<li>SpacerMilitary</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<recipeMaker>
			<researchPrerequisite>VAE_TrooperArmor</researchPrerequisite>
			<skillRequirements>
				<Crafting>7</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="False">
				<li>FabricationBench</li>
			</recipeUsers>
		</recipeMaker>
		<colorGenerator Class="ColorGenerator_Options">
			<!-- Vanilla Power Armor -->
			<options>
				<li>
					<weight>10</weight>
					<only>(0.9,0.9,0.9)</only>
				</li>
				<li>
					<weight>10</weight>
					<only>(0.33,0.33,0.33)</only>
				</li>
				<li>
					<weight>10</weight>
					<only>(0.65,0.65,0.65)</only>
				</li>
				<li>
					<weight>6</weight>
					<min>(0.3,0.3,0.3)</min>
					<max>(0.5,0.5,0.5)</max>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>

	<!-- Recon Gloves-->
	<ThingDef ParentName="ApparelMakeableBase">
		<defName>Handwear_ReconGloves</defName>
		<label>Recon gloves</label>
		<description>A pair of recon gloves used as coverage against low to lower end of medium caliber arms fire, with weakened active insulation compensated by harder plating, they pose considerable recoil absorbtion.
		
		They are generally considered stronger and more ergonomic than their predecessor, and provide better results in action</description>
		<graphicData>
			<texPath>Things/Handwear/ReconGloves</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Spacer</techLevel>
		<tradeability>Sellable</tradeability>
		<generateCommonality>0.1</generateCommonality>
		<costList>
			<Plasteel>18</Plasteel>
			<Steel>35</Steel>
			<ComponentIndustrial>8</ComponentIndustrial>
			<Cloth>10</Cloth>
			<Uranium>5</Uranium>
		</costList>
		<statBases>
			<MaxHitPoints>160</MaxHitPoints>
			<WorkToMake>13500</WorkToMake>
			<Mass>1.8</Mass>
			<Flammability>0.5</Flammability>
			<ArmorRating_Sharp>0.7</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.28</ArmorRating_Blunt>
			<ArmorRating_Heat>0.7</ArmorRating_Heat>
			<Insulation_Cold>3</Insulation_Cold>
			<Insulation_Heat>4</Insulation_Heat>
			<EquipDelay>1.8</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<ShootingAccuracyPawn>0.35</ShootingAccuracyPawn>
		</equippedStatOffsets>
		<thingCategories Inherit="False">
			<li>VAE_BootsAndGloves</li>
		</thingCategories>
		<apparel>
			<countsAsClothingForNudity>false</countsAsClothingForNudity>
			<bodyPartGroups>
